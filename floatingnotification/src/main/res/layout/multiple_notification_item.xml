<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/drawable_rectangle"
        android:elevation="5dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/message_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/view"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:maxLines="2"
                android:text="Failed to checkIn meeting"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <RelativeLayout
                android:id="@+id/option_layout"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="#FAFAFA	">

                <TextView
                    android:id="@+id/close_notification"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/vertical_divider"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/close"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/vertical_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true"
                    android:background="#EBEBEB" />

                <TextView
                    android:id="@+id/detail_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/vertical_divider"
                    android:layout_centerHorizontal="true"
                    android:drawableEnd="@drawable/drop_down"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:padding="7dp"
                    android:text="@string/detail"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/option_layout"
                android:background="#EBEBEB" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/content_layout"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/drawable_circle"
        android:elevation="5dp"
        android:src="@drawable/conflict" />

    <View
        android:id="@+id/expand_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/content_layout"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="8dp"
        android:background="#EBEBEB"
        android:visibility="visible" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/expand_view"
        android:layout_marginStart="30dp"
        android:layout_marginTop="2dp"
        android:visibility="visible" />
</RelativeLayout>